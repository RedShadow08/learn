pipeline {
    agent any

    environment {
        GIT_REPO = 'https://github.com/RedShadow08/learn.git'
        TOMCAT_URL = 'http://localhost:8001'
        TOMCAT_USER = 'admin'
        TOMCAT_PASSWORD = 'admin'
        APP_NAME = 'hello'
    }
    
    stages {
        stage('Checkout') {
            steps {
                // Pull the project from GitHub
                git branch:'master' , url:"${GIT_REPO}"
            }
        }

       stage('Build') {
            steps {
                
                sh 'jar -cvf ${APP_NAME}.war *'
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Deploy the built WAR file to Tomcat
                    sh """
                    curl -u ${TOMCAT_USER}:${TOMCAT_PASSWORD} --upload-file hello.war ${TOMCAT_URL}/manager/text/deploy?path=/${APP_NAME}&update=true
                    """
                }
            }
        }
    }

    post {
        success {
            echo 'Deployment successful!'
        }
        failure {
            echo 'Deployment failed!'
        }
    }
}

